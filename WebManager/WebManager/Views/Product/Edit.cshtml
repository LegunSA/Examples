@model WebManager.Models.ProductModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>ProductSet</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
