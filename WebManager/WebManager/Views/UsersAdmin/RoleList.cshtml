@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>
@{
    ViewData["Title"] = "RoleList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RoleList</h2>
<a asp-action="CreateRole">Add role</a>
<table>
    <tr>
        <th>
            Role
        </th>
        <th>
        </th>
    </tr>
    @foreach (var role in Model)
            {
        <tr>
            <td>@role.Name</td>
            <td><a asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a></td>
        </tr>
    }
</table>

