@model IEnumerable<WebManager.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users List</h2>

<a asp-action="Create">Add user</a>
<a style="padding: 5px 10px"></a>
<a asp-action="CreateRole">Add role</a>
<a style="padding: 5px 10px"></a>
<a asp-action="RoleList">View roles list</a>


<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
    </tr>
    @foreach (var user in Model)
            {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
    }
</table>
